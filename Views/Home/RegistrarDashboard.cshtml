@{ Layout = "../Shared/_LayoutMain"; }
<div class="container-fluid">
    <div class="container">
        <br />
        <div class="row ">
            <br />

            <div class="col-lg-12">
                <div class="card-deck">


                    <div class="card bg-primary">
                        <a href="/Products/UnassignedTasks">

                            <div class="card-body text-center">
                                <h1 style="color:white;"> @ViewBag.allApprovedApplications; </h1>

                                <p class="card-text" style="color:white;"><b>Your Approved Applications </b></p>

                            </div>
                        </a>
                    </div>


                   
                   
                    @ViewBag.pendingApplications;

                    <div class="card bg-warning">

                        <a href="/Home/AssignedCompanyApplications">
                            <div class="card-body text-center">
                                <h1 style="color:white;"> @ViewBag.recommendedCount;</h1>

                                <p class="card-text" style="color:white;"><b> Recommended Applications </b></p>

                            </div>
                        </a>
                    </div>

                    <div class="card bg-info">

                        <a href="/Home/NameSearchTasks">
                            <div class="card-body text-center">
                                <h1 style="color:white;"> @ViewBag.approvedApplications; </h1>

                                <p class="card-text" style="color:white;"><b> All Approved Applications </b></p>

                            </div>
                        </a>
                    </div>



                    <div class="card bg-success">

                        <a href="/Products/UnassignedTasks?ToDisplay=CompanyApplications">
                            <div class="card-body text-center">
                                <h1 style="color:white;">null </h1>

                                <p class="card-text" style="color:white;"><b>Companies </b></p>

                            </div>
                        </a>
                    </div>




                    <!div class="card bg-info">

                        <a href="#">
                            <div class="card-body text-center">
                                <h1 style="color:white;">null</h1>
                                <p class="card-text" style="color:white;"><b>Total Namesearches </b></p>

                            </div>
                        </a>
                    </!div>



                </div>
            </div>



        </div>
        <br />
