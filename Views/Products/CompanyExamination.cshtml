                    </div>
                </div>
            </div>





            <div style="display:none">
                <div class="card mt-5">
                    <div class="card-header">
                        <h4>Members, Directors and Secretary</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    
    <div class="card">
        <h4 class="card-header">Queries</h4>
        <div class="card-body">
            @if (ViewBag.ApplicationQueries.Count > 0) {
            <table class="table table-colored">
                <thead>
                    <tr>
                        <th>Comment</th>
