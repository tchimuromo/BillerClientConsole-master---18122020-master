                        <th>Query Status</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (Queries queries in ViewBag.ApplicationQueries)
                    {
                <tr>
                    <td>@queries.comment</td>
                    <td>@queries.tableName</td>
                    <td>@queries.status</td>
                </tr>}
                </tbody>
                </table>
            }
            else
            {
            <h5 class="text-primary"><strong>Application has No Pending Queries </strong></h5>
