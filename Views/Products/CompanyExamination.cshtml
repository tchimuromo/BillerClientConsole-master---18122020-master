                                    <div class="form-group">
                                        <label for="#emailAddress">Email address</label>
                                        <input type="email" class="form-control" name="emailAddress" id="txtemailAddress" value="@ViewBag.NameOffice.Office.EmailAddress" readonly>
                                    </div>
                                </div>
                            </div>

