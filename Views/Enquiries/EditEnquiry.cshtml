@{
    Layout = "../Shared/_LayoutMain";
}
<div class="container">


    <div class="row">
        <div class="col-md-12" style="display:flex;justify-content:center;align-content:center;">

            <form action="/Enquiries/EditEnquiry" method="post" id="f1" style="width:40%;color:red;">

                <input type="hidden" name="billercode" value="@ViewBag.enq.billercode"/>
                <input type="hidden" name="id" value="@ViewBag.enq.id"/>

                <div class="form-group">
                    <label class="black">Question</label>
                    <input type="password" class="form-control" value="@ViewBag.enq.question" name="question" placeholder="question..." required>
                </div>


                <div class="form-group">
                    <label class="black">Question Status</label>
                    <select class="form-control" name="status">
                        <option value="true" selected="@(bool.Parse(ViewBag.enq.status))">Active</option>
                        <option value="false" selected="@(!bool.Parse(ViewBag.enq.status))">Not Active</option>
                    </select>
                </div>


                <div class="form-group">
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </div>

            </form>
        </div>
    </div>


</div>

<script>

        $('#f1').validate({
            rules: {
                new_password: {
                    minlength: 5
                },
                confirm_password: {
                    minlength: 5,
                    equalTo: "#new_password"
                }
            }
        });
</script>