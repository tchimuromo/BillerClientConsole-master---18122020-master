                </button>
            </div>

            <input type="hidden" id="objectivesss" name="otherObjectives" />

        </form>


    </div>

</div>

<script>
    var objInput = document.getElementById('otherObjective');
    var tozotumira = document.getElementById('objectivesss');
    var objectives = ["aaaa"];

    objectives.pop();
    var container = document.getElementById('objectiveContainer');

    var alphabet = ['a', 'b', 'c', 'd', 'e',
        'f', 'g', 'h', 'i', 'j',
        'k', 'l', 'm', 'n', 'o',
        'p', 'q', 'r', 's', 't',
        'u', 'v', 'w', 'x', 'y',
        'z'];

    var count = 0;

    function addOtherObjective() {
        objectives.push(objInput.value);
        populate();
    }

    function populate() {
        while (container.firstChild) {
            container.removeChild(container.lastChild);
        }
        count = 0;
        objectives.forEach(z => createAndAttach(z));
        tozotumira.value = objectives;
        objInput.value = "";
    }

    function createAndAttach(objective) {
        var innerContainer = document.createElement('div');
        innerContainer.classList.add('mt-3');
        var labo = document.createElement('label');

        //alert( objective);
        labo.textContent = "(" + alphabet[count] + ")" + " " + objective;
        innerContainer.appendChild(labo);

        container.appendChild(innerContainer);


        count++;
    }
</script>
