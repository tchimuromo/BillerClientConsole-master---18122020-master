@using BillerClientConsole.Models;
@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, X.PagedList.Mvc
@addTagHelper *, X.PagedList

@{
    //var feedback = (IPagedList)ViewBag.pfeedback;
}

<style>
    @*style the drop down select entries - datatables*@
    .custom-select
    {
        height:30px!important;
        width:50px!important;
        margin-left:5px!important;
    }
    @*style the copy buttons- datatables*@
    .dt-buttons
    {
        margin-left:4px!important;
    }
</style>


<div class="container-fluid">
    <div class="col-md-12" >

        <form action="/Company/AddCompanyInformation" method="post" style="width:80%" class="mt-3">
            <input type="hidden" name="billercode" value="@ViewBag.billercode" />


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Industry sector</label>
                        <input type="text" class="form-control" name="industrySector" required>
                    </div>
                </div>
                <div class="col-md-6"></div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Physical address</label>
                        <input type="text" class="form-control" name="physicalAddress" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" name="city" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Telephone #</label>
                        <input type="text" class="form-control" name="telephone" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Telephone extension</label>
                        <input type="text" class="form-control" name="telephoneExt" required>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mobile number</label>
                        <input type="text" class="form-control" name="mobileNumber" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email address</label>
                        <input type="text" class="form-control" name="emailAddress" required>
                    </div>
                </div>
            </div>

            <div class="form-group fa-pull-right">
                <button type="submit" class="btn btn-primary">
                    Continue
                </button>
            </div>

        </form>
    </div>
</div>



@*
    @Html.PagedListPager(feedback, page => Url.Action("ListFeedBack", "Reports", new { pageNumber = page }))
*@

<script>
        $("#date_from").Zebra_DatePicker({
            format: 'Y-m-d',
            icon_position: 'left'
        });

        $("#date_to").Zebra_DatePicker({
            format: 'Y-m-d',
            icon_position: 'left'
        });

        $('#datatable').DataTable({
            select: true,
            responsive: true,
            dom: 'lBfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });


</script>

